# SecondBrain Environment Configuration
# Copy this file to .env and fill in your actual values

# === FLASK CONFIGURATION ===
FLASK_ENV=development
APP_SECRET_KEY=your-super-secret-key-change-in-production-use-strong-random-key
HOST=0.0.0.0
PORT=5895

# === MONGODB CONFIGURATION ===
MONGO_URI=mongodb://localhost:27017
MONGODB_CLIENT=secondbrain
MONGODB_COLLECTION=users

# === REDIS CONFIGURATION (for sessions and caching) ===
REDIS_URL=redis://localhost:6379/0
SESSION_TYPE=redis

# === API KEYS ===
OPENAI_API_KEY=sk-... # Get from https://platform.openai.com/api-keys
TAVILY_API_KEY=tvly-... # Get from https://tavily.com

# === LLM CONFIGURATION ===
LLM_MODEL=gpt-4o-mini
EMBEDDINGS_MODEL=text-embedding-3-small

# === CORS CONFIGURATION ===
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# === SECURITY CONFIGURATION ===
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900  # 15 minutes in seconds

# === RATE LIMITING ===
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100/hour
RATELIMIT_LOGIN=5/minute
RATELIMIT_REGISTER=3/hour
RATELIMIT_CHAT=30/minute

# === FILE UPLOAD ===
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER=DATA

# === LOGGING ===
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# === CHROMADB ===
CHROMA_DIR=Classes/chroma_db

# === API CONFIGURATION ===
API_TIMEOUT=30
